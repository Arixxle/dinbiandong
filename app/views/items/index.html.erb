<h1>餐點列表</h1>
<%= link_to "新增", new_item_path %>
<%= link_to 'Category', categories_path %>

  <div class="row">
    <% @items.each do |item| %>
      <div class="col-12 col-md-4 item">
        <div class="card mt-3">
          <!-- <img src="https://fakeimg.pl/300x200/" alt=""> -->
          <div class="cover-image overflow-hidden">
            <!-- <img src="https://picsum.photos/100/200?random=11" class="card-img w-100 h-auto"  alt=""> -->
            <%= image_tag item.cover.variant(resize_to_limit: [200, 200]) if item.cover.attached? %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to item.name, item_path(item.id) %></h5>
            <p class="card-text">分類：<%= item.category.name %></p>
            <%= link_to "編輯", edit_item_path(item.id), class: 'btn btn-info' %>
            <%= link_to "刪除", item_path(item.id), class: 'btn btn-danger', method: 'delete', data: {confirm: "是否確認刪除?"} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

